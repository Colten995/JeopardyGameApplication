<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PointsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnPoints1"
                style="@style/PointsButtons"
                android:layout_height="wrap_content"
                android:shadowColor="#FFFFFF"
                android:text="@string/points_200" />

            <Button
                android:id="@+id/btnPoints2"
                style="@style/PointsButtons"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/points_400" />

            <Button
                android:id="@+id/btnPoints3"
                style="@style/PointsButtons"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/points_600" />

            <Button
                android:id="@+id/btnPoints4"
                style="@style/PointsButtons"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/points_800" />

            <Button
                android:id="@+id/btnPoints5"
                style="@style/PointsButtons"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/points_1000" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>